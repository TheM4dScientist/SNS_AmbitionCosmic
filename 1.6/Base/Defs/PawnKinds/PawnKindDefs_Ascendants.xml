  <PawnKindDef ParentName="AscendantPawnBase" Name="AscendantCommonBase" Abstract="True">
    <specificApparelRequirements>
      <li>
        <bodyPartGroup>UpperHead</bodyPartGroup>
        <stuff>Synthread</stuff>
      </li>
      <li>
