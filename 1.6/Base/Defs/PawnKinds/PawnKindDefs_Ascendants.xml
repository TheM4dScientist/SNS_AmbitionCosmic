    <apparelMoney>500~1500</apparelMoney>
    <gearHealthRange>1~1</gearHealthRange>
    <apparelAllowHeadgearChance>0.4</apparelAllowHeadgearChance>
    <techHediffsMoney>50~800</techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
      <li>Simple</li>
